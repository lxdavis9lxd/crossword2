# App Environment
NODE_ENV=production
PORT=8080

# Session Secret (change to a secure random string)
SESSION_SECRET=change_this_to_a_long_secure_random_string

# SQLite Configuration
# This path should be in a persistent location
SQLITE_PATH=/path/to/your/database.sqlite

# Session Store Configuration
# Option: Redis Cache (if you need distributed sessions)
# REDIS_URL=redis://username:password@your-redis-server:6379

# Admin Configuration (used in migrations/scripts)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=strong_password_here
