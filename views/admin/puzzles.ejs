<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Puzzle Management - Admin</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/admin-styles.css">
</head>
<body class="admin-body">
    <header class="admin-header">
        <h1>Puzzle Management</h1>
        <nav>
            <ul>
                <li><a href="/admin">Dashboard</a></li>
                <li><a href="/admin/users">Users</a></li>
                <li><a href="/admin/puzzles" class="active">Puzzles</a></li>
                <li><a href="/admin/import-puzzles">Import Puzzles</a></li>
                <li><a href="/game/dashboard">Game Dashboard</a></li>
                <li><a href="/auth/logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    
    <main class="admin-main">
        <section class="admin-controls">
            <div class="controls-left">
                <h2>Crossword Puzzles</h2>
            </div>
            <div class="controls-right">
                <a href="/admin/puzzles/create" class="admin-button primary">Create New Puzzle</a>
                <a href="/admin/import-puzzles" class="admin-button secondary">Import Puzzles</a>
                <a href="/admin/export-puzzles" class="admin-button secondary">Export All</a>
            </div>
        </section>
        
        <section class="admin-filters">
            <div class="filter-group">
                <label for="levelFilter">Filter by Level:</label>
                <select id="levelFilter" class="filter-select">
                    <option value="all">All Levels</option>
                    <option value="easy">Easy</option>
                    <option value="intermediate">Intermediate</option>
                    <option value="advanced">Advanced</option>
                </select>
            </div>
            
            <div class="filter-group">
                <label for="search">Search:</label>
                <input type="text" id="search" class="filter-input" placeholder="Search by title...">
            </div>
        </section>
        
        <section class="admin-content">
            <div class="admin-data-table">
                <table id="puzzlesTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Level</th>
                            <th>Difficulty</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (puzzles && puzzles.length > 0) { %>
                            <% puzzles.forEach(puzzle => { %>
                                <tr data-level="<%= puzzle.level %>">
                                    <td><%= puzzle.id %></td>
                                    <td><%= puzzle.title || 'Untitled Puzzle' %></td>
                                    <td>
                                        <span class="badge badge-<%= 
                                            puzzle.level === 'easy' ? 'success' : 
                                            puzzle.level === 'intermediate' ? 'primary' : 
                                            'secondary' 
                                        %>">
                                            <%= puzzle.level %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="difficulty-stars">
                                            <% for (let i = 1; i <= 5; i++) { %>
                                                <span class="star <%= i <= puzzle.difficultyRating ? 'filled' : '' %>">â˜…</span>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td><%= new Date(puzzle.createdAt).toLocaleDateString() %></td>
                                    <td class="actions">
                                        <a href="/admin/puzzles/<%= puzzle.id %>" class="action-link view">View</a>
                                        <a href="/admin/puzzles/<%= puzzle.id %>/edit" class="action-link edit">Edit</a>
                                        <form action="/admin/puzzles/<%= puzzle.id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this puzzle? This action cannot be undone.');" class="inline-form">
                                            <button type="submit" class="action-link delete">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="no-data">No puzzles found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
    
    <footer class="admin-footer">
        <p>&copy; <%= new Date().getFullYear() %> Crossword Game Administration</p>
    </footer>
    
    <style>
        .admin-filters {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
            flex-wrap: wrap;
        }
        
        .filter-group {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .filter-select, .filter-input {
            padding: 0.5rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 0.9rem;
        }
        
        .difficulty-stars {
            display: flex;
        }
        
        .star {
            color: #ddd;
            font-size: 1.1rem;
        }
        
        .star.filled {
            color: #FFC107;
        }
    </style>
    
    <script>
        // Filter puzzles by level and search text
        document.addEventListener('DOMContentLoaded', function() {
            const levelFilter = document.getElementById('levelFilter');
            const searchInput = document.getElementById('search');
            const puzzleRows = document.querySelectorAll('#puzzlesTable tbody tr');
            
            // Filter function
            function filterPuzzles() {
                const level = levelFilter.value;
                const searchText = searchInput.value.toLowerCase();
                
                puzzleRows.forEach(row => {
                    const rowLevel = row.getAttribute('data-level');
                    const rowTitle = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
                    
                    const levelMatch = level === 'all' || rowLevel === level;
                    const searchMatch = rowTitle.includes(searchText);
                    
                    if (levelMatch && searchMatch) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            }
            
            // Add event listeners
            levelFilter.addEventListener('change', filterPuzzles);
            searchInput.addEventListener('input', filterPuzzles);
        });
    </script>
</body>
</html>
