<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crossword Game</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/navigation') %>
    <main>
        <section>
            <h2>Crossword Puzzle</h2>
            <div class="puzzle-controls">
                <div class="level-selector">
                    <label for="level-select">Select Difficulty:</label>
                    <select id="level-select">
                        <option value="easy">Easy</option>
                        <option value="intermediate">Intermediate</option>
                        <option value="advanced">Advanced</option>
                    </select>
                </div>
                <div class="puzzle-selector">
                    <label for="puzzle-select">Select Puzzle:</label>
                    <select id="puzzle-select">
                        <option>Select a difficulty first</option>
                    </select>
                </div>
            </div>
            
            <div id="puzzle-info" style="display: none;">
                <h3 id="puzzle-title">Puzzle Title</h3>
                <p id="puzzle-theme">Puzzle Theme Description</p>
            </div>
            
            <div class="game-area">
                <div id="crossword-container">
                    <!-- Crossword puzzle will be dynamically loaded here -->
                </div>
                
                <div id="clues-container" class="clues-section" style="display: none;">
                    <div class="across-clues">
                        <h3>Across</h3>
                        <ol id="across-clues" class="clue-list"></ol>
                    </div>
                    <div class="down-clues">
                        <h3>Down</h3>
                        <ol id="down-clues" class="clue-list"></ol>
                    </div>
                </div>
            </div>
        </section>
    </main>
    
    <!-- Modal for selecting saved games -->
    <div id="saved-games-modal" class="modal">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <h3>Resume Saved Game</h3>
            <div id="saved-games-list">
                <!-- Saved games will be loaded here -->
                <p class="loading-message">Loading saved games...</p>
            </div>
        </div>
    </div>
    
    <script src="/navigation.js"></script>
    <script src="/scripts.js"></script>
</body>
</html>
