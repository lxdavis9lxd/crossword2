<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crossword Game</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Crossword Game</h1>
        <nav>
            <ul>
                <li><a href="/auth/logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section>
            <h2>Crossword Puzzle</h2>
            <div class="puzzle-controls">
                <div class="level-selector">
                    <label for="level-select">Select Difficulty:</label>
                    <select id="level-select">
                        <option value="easy">Easy</option>
                        <option value="intermediate">Intermediate</option>
                        <option value="advanced">Advanced</option>
                    </select>
                </div>
                <div class="puzzle-selector">
                    <label for="puzzle-select">Select Puzzle:</label>
                    <select id="puzzle-select">
                        <option>Select a difficulty first</option>
                    </select>
                </div>
                <button id="load-puzzle-btn">Load Puzzle</button>
            </div>
            <div id="crossword-container">
                <!-- Crossword puzzle will be dynamically loaded here -->
            </div>
            <button id="save-button">Save</button>
        </section>
    </main>
    <script src="/scripts.js"></script>
</body>
</html>
